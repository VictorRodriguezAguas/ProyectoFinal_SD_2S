    .aut-bg-img-emprendedor{
        background-image: url(images/InicioEmprendedor.jpg);
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
    }
    .aut-bg-img-mentor{
        background-image: url(images/banner/Mentores.png);
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
    }
</style>
<div class="auth-wrapper align-items-stretch aut-bg-img aut-bg-img-emprendedor">
  <div class="flex-grow-1">
    <!--div class="h-100 d-md-flex align-items-center auth-side-img">
      <div class="col-sm-10 auth-content w-auto">
        <img src="images/logo_ce2.png" alt="" class="img-fluid">
        <h1 class="text-white my-4">Welcome Back!</h1>
        <h4 class="text-white font-weight-normal">Signin to your account and get explore the Able Pro Dashboard
          Template.<br />Do not forget to play with live customizer</h4>
      </div>
    </div-->
    <div class="auth-side-form">
      <div class=" auth-content">
        <img src="images/logo_ce2.png" alt="" class="img-fluid mb-4 d-block d-xl-none d-lg-none">
        <h3 class="mb-4 f-w-400">¡Empieza tu ruta épica!</h3>
        <div class="input-group mb-3">
          <input type="email" class="form-control" placeholder="Usuario" [(ngModel)]="user.usuario">
        </div>
        <div class="input-group mb-4">
          <input type="password" class="form-control" placeholder="Contraseña" [(ngModel)]="user.password">
        </div>
        <a class="btn btn-block text-white btn-primary mb-0" 
        (click)="login()">Ingresar</a>
        <div class="text-center">
          <div class="saprator my-4"><span>-</span></div>
          <p class="mb-2 text-muted">¿No tienes cuenta? <a [href]="registro"
              class="f-w-400">Regístrate</a></p>
              <p class="mb-2 text-muted">
                <a 
                  (click)="olvidarClave()"
                  class="f-w-400">¿Olvidaste tu contraseña?</a>
              </p>
        </div>
      </div>
    </div>
  </div>
</div>